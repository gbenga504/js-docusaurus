{
	"name": "js-docusaurus",
	"displayName": "js-docusaurus - comment linter",
	"description": "Opinionated comment linter for Javascript and Typescript projects",
	"version": "0.1.0",
	"publisher": "gbenga504",
	"author": "Anifowoshe Gbenga David <@gbenga504>",
	"engines": {
		"vscode": "^1.41.0"
	},
	"galleryBanner": {
		"color": "#ffe04b",
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gbenga504/js-docusaurus.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/gbenga504/js-docusaurus/issues"
	},
	"keywords": [
		"linter",
		"javascript",
		"typescript",
		"js",
		"ts",
		"comment",
		"docusaurus",
		"analyzer"
	],
	"categories": [
		"Programming Languages",
		"Language Packs",
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"format": "prettier --write \"src/**/*.{ts,json,css,md}\"",
		"format:check": "prettier --list-different \"src/**/*.{ts,json,css,md}\""
	},
	"lint-staged": {
		"*.{js,jsx,md}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"mocha": "^7.1.2",
		"prettier": "^2.0.5",
		"sinon": "^9.0.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}